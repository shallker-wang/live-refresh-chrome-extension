{
  "name": "Liverefresh Chrome Extension",
  "description": "A chrome extension to help your development.",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {"page": "background/index.html"},
  "browser_action": {
    "default_title": "Liverefresh",
    "default_icon": {
      "19": "icons/off/19.png",
      "38": "icons/off/38.png"
    }
  },
  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png",
    "16": "icons/16.png"
  }
}
